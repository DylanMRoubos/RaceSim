<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RaceGui"
        xmlns:Model="clr-namespace:Model;assembly=Model" x:Class="RaceGui.StatisticsWindow"
        mc:Ignorable="d"
        Title="StatisticsWindow" Height="450" Width="800">
    <Window.DataContext>
        <Model:MainDataContext/>
    </Window.DataContext>
    <Grid Margin="0,97,526,0">
        <ListView Margin="100,-75,-60,71" Grid.ColumnSpan="2">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Driver" Width="120" DisplayMemberBinding="{Binding TrackName}" />
                    <GridViewColumn Header="BrokenDownAmount" Width="120"  />
                </GridView>
            </ListView.View>
        </ListView>

    </Grid>
</Window>
